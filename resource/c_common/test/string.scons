Import('test_env')
import os
import os.path

test_env = test_env.Clone()

test_env.PrependUnique(
	CPPPATH = ['#resource/c_common']
)

test_env.AppendUnique(
        LIBPATH = [os.path.join(test_env.get('BUILD_DIR'), 'c_common'),
		           test_env.get('INSTALL_SYSROOT')]
)

test_env.PrependUnique(
	LIBS = ['c_common']
)

if test_env.get('LOGGING'):
    test_env.AppendUnique(
        CPPDEFINES = ['TB_LOG']
    )

######################################################################
# Source files and Targets
######################################################################
stringtests = test_env.Program('stringtests', ['linux/oic_string_tests.cpp'])

Alias("test", [stringtests])

# test_env.AppendTarget('test')

test_env.Install(os.path.join(test_env.get('INSTALL_SYSROOT'), 'test'),  stringtests)

