Import('test_env')
import os
import os.path

test_env = test_env.Clone()

test_env.PrependUnique(
	CPPPATH = ['#resource/c_common']
)

test_env.AppendUnique(
        LIBPATH = [os.path.join(test_env.get('BUILD_DIR'), 'c_common'),
		           test_env.get('INSTALL_SYSROOT')]
)

test_env.PrependUnique(
        LIBS = ['c_common']
)

if test_env.get('TARGET_OS') != 'darwin':
        test_env.Append(LIBS = ['rt']);

if test_env.get('LOGGING'):
        test_env.AppendUnique(
                CPPDEFINES = ['TB_LOG']
        )

######################################################################
# Source files and Targets
######################################################################
timetests = test_env.Program('timetests', ['linux/oic_time_tests.cpp'])

Alias("test", [timetests])

# test_env.AppendTarget('test')

test_env.Install(os.path.join(test_env.get('INSTALL_SYSROOT'), 'test'),  timetests)

